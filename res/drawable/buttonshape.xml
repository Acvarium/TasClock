<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/selected_task" android:startColor="@color/selected_task" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="@color/selected_task" android:startColor="@color/selected_task" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/unselected_task" android:startColor="@color/unselected_task" />
        </shape></item>

</selector>